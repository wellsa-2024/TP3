programme fait par : Arthur Wells
Groupe : 406
Description : Combat de monstre
"""
import random


niveau_vie = 20
nombre_victoires = 0
nombre_defaites = 0
numero_adversaire = 0


def afficher_regles():
    print("\nRègles du jeu :")
    print("Pour réussir un combat, il faut que la valeur du dé lancé soit supérieure à la force de l’adversaire.")
    print("Dans ce cas, le niveau de vie de l’usager est augmenté de la force de l’adversaire.")
    print("Une défaite a lieu lorsque la valeur du dé lancé par l’usager est inférieure ou égale à la force de l’adversaire.")       
    print("Dans ce cas, le niveau de vie de l’usager est diminué de la force de l’adversaire.")
    print("L’usager peut combattre ou éviter chaque adversaire. Dans le cas de l’évitement, il y a une pénalité de 1 point de vie.")
    print("La partie se termine lorsque les points de vie de l’usager tombent à 0 ou moins.\n")


def menu():
    print("\nQue voulez-vous faire ?")
    print("1- Combattre cet adversaire")
    print("2- Contourner cet adversaire et aller ouvrir une autre porte")
    print("3- Afficher les règles du jeu")
    print("4- Quitter la partie")


def lancer_de():
    return random.randint(1, 6)



while niveau_vie > 0:
    numero_adversaire += 1
    force_adversaire = random.randint(1, 5)
    print(f"\nVous tombez face à face avec un adversaire de difficulté : {force_adversaire}")

    menu()
    choix = input("Votre choix : ")

    if choix == '1':
        score_de = lancer_de()
        print(f"Lancer du dé : {score_de}")

        if score_de > force_adversaire:

            nombre_victoires += 1
            niveau_vie += force_adversaire
            print(f"Victoire ! Vous avez vaincu l'adversaire.")
            print(f"Niveau de vie : {niveau_vie}")
            print(f"Nombre de victoires consécutives : {nombre_victoires}")
        else:

            nombre_defaites += 1
            niveau_vie -= force_adversaire
            print(f"Défaite... L'adversaire vous a battu.")
            print(f"Niveau de vie : {niveau_vie}")
            if niveau_vie <= 0:
                break

    elif choix == '2':
        niveau_vie -= 1
        print(f"Vous avez contourné l'adversaire. Pénalité : -1 point de vie.")
        print(f"Niveau de vie : {niveau_vie}")

    elif choix == '3':
        afficher_regles()

    elif choix == '4':
        print("Merci et au revoir...")
        break
    else:
        print("Choix invalide, veuillez réessayer.")


if niveau_vie <= 0:
    print(f"La partie est terminée. Vous avez vaincu {nombre_victoires} monstre(s).")


